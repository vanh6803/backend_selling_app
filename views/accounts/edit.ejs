<%- include('../inc/header') %>

    <div class="container-fluid">
        <div class="row bg-secondary-subtle">
            <h1>Add user</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
                    <li class="breadcrumb-item"><a href="#">user</a></li>
                    <li class="breadcrumb-item active" aria-current="page">edit user</li>
                </ol>
            </nav>
        </div>

        <div class="container">
            <div class="row col-12 col-md-9 m-auto mt-5 mb-5 border border-dark-subtle p-5 rounded-5 shadow-lg ">
                <form method="post" action="" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">FullName</label>
                        <div class="col-sm-10">
                            <input name="fullName" type="text" class="form-control border border-dark-subtle" id="" value="<%= account.fullName %>">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Username</label>
                        <div class="col-sm-10">
                            <input name="username" type="text" class="form-control border border-dark-subtle" id="" value="<%= account.username %>">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-10">
                            <input class="form-control border border-dark-subtle" name="avatar" type="file">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Password</label>
                        <div class="col-sm-10">
                            <input name="password" type="password" class="form-control border border-dark-subtle"
                                id="inputPassword3">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            <input name="email" type="email" class="form-control border border-dark-subtle"
                                id="inputEmail3" value="<%= account.email %>">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Address</label>
                        <div class="col-sm-10">
                            <input name="address" type="text" class="form-control border border-dark-subtle"
                                id="inputEmail3">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Phone Number</label>
                        <div class="col-sm-10">
                            <input name="phone" type="text" class="form-control border border-dark-subtle"
                                id="inputEmail3">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Birthday</label>
                        <div class="col-sm-10">
                            <input name="birthday" type="date" class="form-control border border-dark-subtle"
                                id="inputEmail3">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="" class="col-sm-2 col-form-label">Gender</label>
                        <div class="col-sm-10 d-flex align-items-center">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" value="0">
                                <label class="form-check-label ms-1">Male</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="gender" value="1">
                                <label class="form-check-label ms-1">Female</label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label">Role</label>
                        <div class="col-sm-10">
                            <select name="role" class="form-select" aria-label="Default select example">
                                <option selected>select role</option>
                                <option value="0">Admin</option>
                                <option value="1">user</option>
                            </select>
                        </div>
                    </div>

                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="submit" class="btn btn-outline-success">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include('../inc/footer') %>